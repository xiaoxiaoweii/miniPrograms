/* pages/home/home.wxss */
page {
  -webkit-font-smoothing: antialiased;
}
/* 总体 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color: #fff;
  font-size: 30rpx;
}
/* 背景 */
.bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
/* 用户信息 */
.avatarInfo {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
}
.avatarInfo .avatar {
  display: block;
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.avatarInfo .name {
  padding: 0 20rpx;
  font-size: 30rpx;
}
.avatarInfo .downArrow {
  width: 30rpx;
  height: 30rpx;
}
/* 内容区域 */
.container .content {
  flex: 2;
  transition: .3s ease;
}
.content {
  position: relative;
  z-index: 2;
  margin-top: 20px;
}
/* info */
.info {
  padding-bottom: 50rpx;
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
}
.info .temp,
.info .pm,
.info .pm view,
.info .weather {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.info .weather {
  margin-bottom: 30rpx;
}
.info .pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(240, 240, 240, .2);
}
/* city显示设置 */
.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 0 50rpx;
  font-size: 66rpx;
}
.city .name {
  width: 5em;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.city .time {
  display: block;
  text-align: right;
  font-size: 24rpx;
}
.message {
  font-size: 22rpx;
  color: #fff;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box;
}
.temp {
  height: 360rpx;
  font-size: 200rpx;
}
.num {
  font-weight: 300;
}
/* guide */
.guide {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  padding-top: 20rpx;
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: rgba(0, 0, 0, .6);
  margin-bottom: 20rpx;
}
.guide .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.guide image {
  width: 44rpx;
}
.guide .i {
  padding-bottom: 20rpx;
}
/* 温馨提示 */
.livingIndex {
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: rgba(0, 0, 0, .6);
  margin-bottom: 20rpx;
}
.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.livingIndex .item:last-child {
  border-bottom: none;
}
.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}
.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
/* footer */
.footer {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 60rpx;
  font-size: 22rpx;
  color: #fff;
}